<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/rounded_corners"
  android:layout_gravity="center"
  android:minWidth="240dp"
  android:orientation="vertical">

  <!-- Top Center Icons -->
  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
    android:id="@+id/imageView2"
    android:layout_width="200dp"
    android:layout_height="108dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center"
    app:srcCompat="@drawable/bubble_icon" />

<!--    <Button-->
<!--      android:id="@+id/CloseNotification"-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:layout_gravity="center"-->
<!--      android:gravity="end"-->
<!--      android:text="Close" />-->


  </LinearLayout>

  <!-- Fare -->
  <TextView
    android:id="@+id/Fare"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:text="$10.50"
    android:textColor="#f4f4f4"
    android:padding="5dp"
    android:layout_marginVertical="10dp"
    android:textSize="75dp"/>

  <!-- Distance to/address -->
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/pickUpLocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:fontFamily="sans-serif-medium"
      android:gravity="center"
      android:padding="10dp"
      android:text="15 Minutes 5 Miles Away "
      android:textColor="#f4f4f4"
      android:textSize="30dp" />

    <TextView
      android:id="@+id/pickUpAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:fontFamily="sans-serif-medium"
      android:gravity="center"
      android:lines="2"
      android:padding="10dp"
      android:text="1413 Colorado Bend Dr, Cedar Park "
      android:textColor="#f4f4f4"
      android:textSize="27dp" />
  </LinearLayout>

  <!-- Path Icon -->
  <ImageView
    android:id="@+id/imageView"
    android:layout_width="200dp"
    android:layout_height="180dp"
    android:layout_gravity="center"
    app:srcCompat="@drawable/path" />

  <!-- To Dest/address -->
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/dropOffLocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:layout_gravity="center"
      android:gravity="center"
      android:fontFamily="sans-serif-medium"
      android:text="12 mins/ 4.8mi Trip"
      android:textColor="#f4f4f4"
      android:textSize="30dp"/>

    <TextView
      android:id="@+id/dropOffAddress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:fontFamily="sans-serif-medium"
      android:lines="2"
      android:layout_gravity="center"
      android:gravity="center"
      android:text="Mojo Coffee Ranch Road 620, Cedar Park"
      android:textColor="#f4f4f4"
      android:textSize="27dp"/>

  </LinearLayout>

  <!-- Lower Buttons -->
  <Button
    android:id="@+id/button"
    android:layout_marginVertical="15dp"
    android:layout_width="250dp"
    android:layout_gravity="center"
    android:layout_height="45dp"
    android:background="@drawable/round_button"
    android:text="Return to app"
    android:textColor="#f4f4f4"
    android:textFontWeight="700"
    android:textSize="15dp" />

</LinearLayout>
