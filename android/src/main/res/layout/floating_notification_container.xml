<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:background="@drawable/rounded_corners"
  android:layout_gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/imageView2"
    android:layout_width="80dp"
    android:layout_height="75dp"
    android:layout_marginTop="8dp"
    android:layout_gravity="center"
    app:srcCompat="@drawable/bubble_icon" />

  <!-- Fare -->
  <TextView
    android:id="@+id/Fare"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-medium"
    android:gravity="center"
    android:text="$10.50"
    android:textColor="#f4f4f4"
    android:padding="5dp"
    android:layout_marginVertical="2dp"
    android:textSize="50dp"/>

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="90dp"
      android:layout_height="221dp"
      android:layout_gravity="center"
      app:srcCompat="@drawable/path" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:orientation="vertical">

      <TextView
        android:id="@+id/pickUpLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="5dp"
        android:text="15 Minutes 5 Miles Away "
        android:textColor="#f4f4f4"
        android:textSize="20dp" />

      <TextView
        android:id="@+id/pickUpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:lines="2"
        android:padding="5dp"
        android:text="1413 Colorado Bend Dr, Cedar Park "
        android:textColor="#f4f4f4"
        android:textSize="22dp" />

      <TextView
        android:id="@+id/dropOffLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:text="12 mins/ 4.8mi Trip"
        android:textColor="#f4f4f4"
        android:textSize="20dp"/>

      <TextView
        android:id="@+id/dropOffAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:fontFamily="sans-serif-medium"
        android:lines="2"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Mojo Coffee Ranch Road 620, Cedar Park"
        android:textColor="#f4f4f4"
        android:textSize="22dp"/>

    </LinearLayout>

  </LinearLayout>

  <!-- Lower Buttons -->
  <Button
    android:id="@+id/re_open_app"
    android:layout_marginVertical="15dp"
    android:layout_width="250dp"
    android:layout_gravity="center"
    android:layout_height="45dp"
    android:background="@drawable/round_button"
    android:text="Return to app"
    android:textColor="#f4f4f4"
    android:textFontWeight="700"
    android:onClick="reopenApp"
    android:textSize="15dp" />

</LinearLayout>
