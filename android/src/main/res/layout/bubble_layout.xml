<?xml version="1.0" encoding="utf-8"?>
<com.txusballesteros.bubbles.BubbleLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:clipChildren="false"
  android:clipToPadding="false"
  tools:ignore="MissingClass">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/avatar"
      android:contentDescription="@string/bubble_image"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginBottom="5dp"
      android:background="@drawable/profile_decorator"
      android:src="@drawable/bubble_icon"
      android:scaleType="centerCrop"/>


    <LinearLayout
      android:id="@+id/notification_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/rounded_corners"
      android:layout_gravity="center"
      android:gravity="center|center_vertical|center_horizontal"
      android:visibility="gone"
      android:layout_marginLeft="10dp"
      android:padding="10dp"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:src="@drawable/bubble_icon" />

      <!-- Fare -->
      <TextView
        android:id="@+id/Fare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text=""
        android:textColor="#f4f4f4"
        android:padding="5dp"
        android:layout_marginVertical="2dp"
        android:textSize="50dp"/>

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
          android:id="@+id/imageView"
          android:layout_width="65dp"
          android:layout_height="220dp"
          android:layout_gravity="center"
          android:src="@drawable/path" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

          <TextView
            android:id="@+id/pickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="20dp" />

          <TextView
            android:id="@+id/pickUpAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lines="2"
            android:padding="5dp"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="22dp" />

          <TextView
            android:id="@+id/dropOffLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="20dp"/>

          <TextView
            android:id="@+id/dropOffAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="22dp"/>

        </LinearLayout>

      </LinearLayout>

      <!-- Lower Buttons -->
      <Button
        android:id="@+id/re_open_app"
        android:layout_marginVertical="15dp"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="45dp"
        android:background="@drawable/round_button"
        android:text="Return to app"
        android:textColor="#f4f4f4"
        android:textFontWeight="700"
        android:textSize="15dp" />

    </LinearLayout>


  </LinearLayout>

</com.txusballesteros.bubbles.BubbleLayout>
