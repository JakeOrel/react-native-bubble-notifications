<?xml version="1.0" encoding="utf-8"?>
<com.txusballesteros.bubbles.BubbleLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:clipChildren="false"
  android:clipToPadding="false"
  tools:ignore="MissingClass">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/avatar"
      android:contentDescription="@string/bubble_image"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_gravity="center"
      android:background="@drawable/profile_decorator"
      android:src="@drawable/bubble_icon"
      android:scaleType="centerCrop"/>

    <LinearLayout
      android:id="@+id/notification_layout"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:background="@drawable/rounded_corners"
      android:minWidth="260dp"
      android:orientation="vertical"
      android:visibility="gone">

      <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corners"
        android:layout_gravity="end"
        android:minWidth="240dp"
        android:orientation="vertical">

        <!-- Top Center Icons -->
        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:orientation="horizontal">

          <ImageView
            android:id="@+id/imageView2"
            android:contentDescription="@string/wridz_icon"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/bubble_icon" />

          <!--    <Button-->
          <!--      android:id="@+id/CloseNotification"-->
          <!--      android:layout_width="wrap_content"-->
          <!--      android:layout_height="wrap_content"-->
          <!--      android:layout_gravity="center"-->
          <!--      android:gravity="end"-->
          <!--      android:text="Close" />-->


        </LinearLayout>

        <!-- Fare -->
        <TextView
          android:id="@+id/Fare"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-medium"
          android:gravity="center"
          android:text=""
          android:textColor="#f4f4f4"
          android:padding="5dp"
          android:layout_marginVertical="2dp"
          android:textSize="50sp"/>

        <!-- Distance to/address -->
        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

          <TextView
            android:id="@+id/pickUpLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="26sp" />

          <TextView
            android:id="@+id/pickUpAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:lines="2"
            android:padding="10dp"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="22sp" />
        </LinearLayout>

        <!-- Path Icon -->

        <!-- To Dest/address -->
        <ImageView
          android:id="@+id/imageView"
          android:contentDescription="@string/path_icon"
          android:layout_width="127dp"
          android:layout_height="133dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/path" />

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:orientation="vertical">

          <TextView
            android:id="@+id/dropOffLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="26sp"/>

          <TextView
            android:id="@+id/dropOffAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:text=""
            android:textColor="#f4f4f4"
            android:textSize="22sp"/>

        </LinearLayout>

        <!-- Lower Buttons -->
        <Button
          android:id="@+id/re_open_app"
          android:layout_width="250dp"
          android:layout_height="45dp"
          android:layout_gravity="center"
          android:layout_marginVertical="15dp"
          android:background="@drawable/round_button"
          android:onClick="reopenApp"
          android:text="@string/return_to_app"
          android:textColor="#f4f4f4"
          android:textFontWeight="700"
          android:textSize="15sp" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</com.txusballesteros.bubbles.BubbleLayout>
